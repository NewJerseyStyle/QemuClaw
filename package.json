{
  "name": "qemuclaw",
  "version": "1.0.2",
  "description": "QemuClaw - OpenClaw in isolated water tank",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "openclaw",
    "qemu",
    "virtual-machine",
    "ai-assistant"
  ],
  "author": "David H. <dev.source@outlook.com>",
  "bugs": {
    "url": "https://github.com/NewJerseyStyle/QemuClaw/issues"
  },
  "license": "MIT",
  "dependencies": {
    "electron-store": "^11.0.2",
    "fs-extra": "^11.3.3",
    "@xterm/xterm": "^6.0.0",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-unicode11": "^0.9.0",
    "@xterm/addon-web-links": "^0.12.0"
  },
  "devDependencies": {
    "electron": "^40.4.0",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.qemuclaw.ctrl-panel",
    "productName": "QemuClaw Control Panel",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "ui/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "vendor",
        "to": "vendor",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "OpenClaw VM Manager",
      "artifactName": "QemuClaw-Setup-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "artifactName": "QemuClaw-${version}-mac.${ext}"
    },
    "dmg": {
      "artifactName": "QemuClaw-${version}.dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon-256.png",
      "category": "Utility",
      "artifactName": "QemuClaw-${version}-linux.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "NewJerseyStyle",
      "repo": "qemuclaw"
    }
  }
}
